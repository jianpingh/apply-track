# Environment Variables Template
# Copy this file to .env.local for local development
# Different files are used for different environments:
# - .env.local (local development overrides)
# - .env.development (development environment)
# - .env.production (production environment)
# - .env.production.local (production local overrides)

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database URL (for migrations)
DATABASE_URL=your_database_connection_string

# NextAuth Configuration (if using NextAuth.js)
NEXTAUTH_SECRET=your_nextauth_secret_minimum_32_characters
NEXTAUTH_URL=http://localhost:3001

# Application Settings
NODE_ENV=development
PORT=3001

# Security Settings (Production)
ALLOWED_ORIGINS=https://your-domain.com
CORS_ORIGIN=https://your-domain.com
SECURE_COOKIES=false
FORCE_HTTPS=false

# Performance Settings
CACHE_TTL=300
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=900000

# Logging Settings
LOG_LEVEL=info
ENABLE_ANALYTICS=false
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Debug and Development Settings
DEBUG=false
NEXT_DEBUG=false
VERBOSE_LOGGING=false

# API Configuration
API_TIMEOUT=30000
MAX_UPLOAD_SIZE=10485760

# Email Configuration
EMAIL_PROVIDER=console
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_SECURE=false

# Storage Configuration (Production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=your_s3_bucket_name

# Monitoring
HEALTH_CHECK_ENDPOINT=/api/health
MONITORING_SECRET=your_monitoring_secret

# Database Pool Settings
DB_POOL_MIN=1
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
